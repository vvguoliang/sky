<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_sex_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/buttom_camera"
            android:layout_marginLeft="@dimen/common_30dp"
            android:layout_marginTop="@dimen/common_16dp"
            android:src="@mipmap/ic_sex_man"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttom_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:layout_margin="@dimen/common_10dp"
            android:background="@drawable/shape_buttom"
            android:text="@string/membership_rights"
            android:textColor="@color/commont_colorff3a94"
            android:textSize="@dimen/common_16dp" />


        <ImageView
            android:id="@+id/ic_sex_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/buttom_album"
            android:layout_marginLeft="@dimen/common_30dp"
            android:layout_marginTop="@dimen/common_65dp"
            android:src="@mipmap/ic_sex_woman"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttom_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:layout_below="@id/buttom_camera"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_10dp"
            android:layout_marginTop="@dimen/common_5dp"
            android:background="@drawable/shape_buttom"
            android:text="@string/membership_rights"
            android:textColor="@color/commont_colorff3a94"
            android:textSize="@dimen/common_16dp" />


        <Button
            android:id="@+id/buttom_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:layout_below="@id/buttom_album"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_marginLeft="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_10dp"
            android:layout_marginTop="@dimen/common_5dp"
            android:background="@drawable/shape_buttom"
            android:text="@string/membership_rights"
            android:textColor="@color/commont_colorff3a94"
            android:textSize="@dimen/common_16dp"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
