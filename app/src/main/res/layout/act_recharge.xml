<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_my_bg" />

    <!--<com.sky.beautiful.View.Random.BubbleLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <include layout="@layout/title_tab" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_relat"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_recharge_bg"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recharge_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0.00"
                        android:textColor="@color/commont_colorff3a94"
                        android:textSize="@dimen/common_50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_35dp"
                        android:layout_toRightOf="@id/recharge_current"
                        android:text="@string/melon"
                        android:textColor="@color/commont_colorff3a94"
                        android:textSize="@dimen/common_16dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_balance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_5dp"
                        android:text="@string/current_balance"
                        android:textColor="@color/commont_color333333"
                        android:textSize="@dimen/common_12dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_10dp"
                android:background="@mipmap/ic_recharge_bg1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recharge_minimum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_10dp"
                    android:layout_marginLeft="@dimen/common_25dp"
                    android:layout_marginTop="@dimen/common_20dp"
                    android:text="@string/current_balance"
                    android:textColor="@color/commont_color999999"
                    android:textSize="@dimen/common_12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_20dp"
                    android:layout_marginRight="@dimen/common_20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/recharge_other_balace1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_10dp"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_recharge"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/common_5dp">

                            <TextView
                                android:id="@+id/recharge_other_balace_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/common_5dp"
                                android:text="10元"
                                android:textColor="@color/commont_color333333"
                                android:textSize="@dimen/common_16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100瓜币"
                                android:textColor="@color/commont_color666666"
                                android:textSize="@dimen/common_14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/recharge_other_balace2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/shape_corner1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/common_5dp">

                            <TextView
                                android:id="@+id/recharge_other_balace_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/common_5dp"
                                android:text="50元"
                                android:textColor="@color/commont_color333333"
                                android:textSize="@dimen/common_16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500瓜币"
                                android:textColor="@color/commont_color666666"
                                android:textSize="@dimen/common_14dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/recharge_other_balace3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_10dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_corner1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/common_5dp">

                            <TextView
                                android:id="@+id/recharge_other_balace_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/common_5dp"
                                android:text="200元"
                                android:textColor="@color/commont_color333333"
                                android:textSize="@dimen/common_16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2000瓜币"
                                android:textColor="@color/commont_color666666"
                                android:textSize="@dimen/common_14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/recharge_other_balace4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/shape_corner1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/common_5dp">

                            <TextView
                                android:id="@+id/recharge_other_balace_text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/common_5dp"
                                android:text="500元"
                                android:textColor="@color/commont_color333333"
                                android:textSize="@dimen/common_16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5000瓜币"
                                android:textColor="@color/commont_color666666"
                                android:textSize="@dimen/common_14dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/recharge_other_balace"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_10dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_corner1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/common_5dp">

                            <TextView
                                android:id="@+id/recharge_other_balace_text5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/common_15dp"
                                android:text="@string/other_balance"
                                android:textColor="@color/commont_color333333"
                                android:textSize="@dimen/common_16dp"
                                android:visibility="gone" />


                            <EditText
                                android:id="@+id/recharge_other_balace_text6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="@string/other_balance1"
                                android:padding="@dimen/common_15dp"
                                android:textColor="@color/commont_color333333"
                                android:textColorHint="@color/commont_color999999"
                                android:textSize="@dimen/common_16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/shape_corner1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/common_5dp"
                            android:visibility="invisible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/common_5dp"
                                android:text="@string/current_balance"
                                android:textColor="@color/commont_color333333"
                                android:textSize="@dimen/common_16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/current_balance"
                                android:textColor="@color/commont_color666666"
                                android:textSize="@dimen/common_14dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="@dimen/common_10dp"
                    android:paddingLeft="@dimen/common_20dp"
                    android:paddingTop="@dimen/common_10dp"
                    android:text="@string/recharge_method"
                    android:textColor="@color/commont_color666666"
                    android:textSize="@dimen/common_12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_0_5dp"
                    android:background="@color/commont_colorF0F0F0" />

                <LinearLayout
                    android:id="@+id/recharge_checkbox_linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/common_10dp"
                    android:paddingLeft="@dimen/common_20dp"
                    android:paddingRight="@dimen/common_20dp"
                    android:paddingTop="@dimen/common_10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_10dp"
                        android:src="@mipmap/ic_zhifubai" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_30dp"
                        android:layout_weight="1"
                        android:text="@string/zhifubao"
                        android:textColor="@color/commont_color333333"
                        android:textSize="@dimen/common_14dp" />

                    <ImageView
                        android:id="@+id/recharge_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_check_bg" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_0_5dp"
                    android:background="@color/commont_colorF0F0F0" />

                <LinearLayout
                    android:id="@+id/recharge_checkbox_linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/common_10dp"
                    android:paddingLeft="@dimen/common_20dp"
                    android:paddingRight="@dimen/common_20dp"
                    android:paddingTop="@dimen/common_10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_10dp"
                        android:src="@mipmap/ic_weixin" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_30dp"
                        android:layout_weight="1"
                        android:text="@string/weixin"
                        android:textColor="@color/commont_color333333"
                        android:textSize="@dimen/common_14dp" />

                    <ImageView
                        android:id="@+id/recharge_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_check_bg" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_0_5dp"
                    android:background="@color/commont_colorF0F0F0" />

            </LinearLayout>


            <Button
                android:id="@+id/recharge_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40dp"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_10dp"
                android:layout_marginTop="@dimen/common_10dp"
                android:background="@drawable/button_foreground_corner_color"
                android:text="@string/recharge"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_16dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
