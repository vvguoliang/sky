<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_20dp"
        android:layout_marginRight="@dimen/common_20dp"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/common_50dp"
            android:layout_height="@dimen/common_50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/version_conteont1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_10dp"
            android:text="@string/version_update"
            android:textColor="@color/commont_color666666"
            android:textSize="@dimen/common_16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_20dp"
            android:scrollbars="none">

            <TextView
                android:id="@+id/version_conteont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/version_update"
                android:textColor="@color/commont_color666666"
                android:textSize="@dimen/common_16dp" />

        </ScrollView>


        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_1dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@color/commont_colorf0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/version_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/common_10dp"
                android:text="@string/version_update"
                android:textColor="@color/commont_color666666"
                android:textSize="@dimen/common_16dp" />

            <View
                android:layout_width="@dimen/common_1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_10dp"
                android:background="@color/commont_colorf0f0f0" />

            <TextView
                android:id="@+id/version_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/common_10dp"
                android:text="@string/version_update"
                android:textColor="@color/commont_color666666"
                android:textSize="@dimen/common_16dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
