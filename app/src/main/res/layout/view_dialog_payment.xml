<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_20dp"
        android:layout_marginRight="@dimen/common_20dp"
        android:background="@drawable/progressbar_color"
        android:orientation="vertical"
        android:padding="@dimen/common_10dp">

        <TextView
            android:id="@+id/dialog_payment_tuji_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="10"
            android:padding="@dimen/common_10dp"
            android:singleLine="true"
            android:textColor="@color/commont_color666666"
            android:textSize="@dimen/common_18dp" />

        <TextView
            android:id="@+id/dialog_payment_guabi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/commont_color666666"
            android:textSize="@dimen/common_18dp" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_20dp"
            android:background="@color/commont_color999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10dp"
            android:orientation="horizontal">

            <com.sky.beautiful.View.MyButton
                android:id="@+id/dialog_payment_clean"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_corner2"
                android:text="@string/clean"
                android:textColor="@color/commont_color333333"
                android:textSize="@dimen/common_16dp" />

            <com.sky.beautiful.View.MyButton
                android:id="@+id/dialog_payment_determine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_weight="1"
                android:background="@drawable/button_foreground_corner_color"
                android:text="@string/determine"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
